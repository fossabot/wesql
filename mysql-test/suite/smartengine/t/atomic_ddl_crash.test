#
#inject crash during create table
#
# first injection
--echo # Test create table crash/recovery rollback.
set session debug='+d, ddl_log_crash_after_drop_subtable_log';
select @@debug;

--exec echo "restart" > $MYSQLTEST_VARDIR/tmp/mysqld.1.expect

--error CR_SERVER_LOST,ER_INTERNAL_ERROR
CREATE TABLE t1 (a INT, b INT, c INT, key(a), key(b)) ENGINE = SMARTENGINE;

--enable_reconnect
--source include/wait_until_connected_again.inc

--error ER_NO_SUCH_TABLE
show create table t1;

#second injection
set session debug='+d, ddl_log_crash_create_after_se_success';

--exec echo "restart" > $MYSQLTEST_VARDIR/tmp/mysqld.1.expect

--error CR_SERVER_LOST,ER_INTERNAL_ERROR
