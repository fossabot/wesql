--source suite/smartengine/include/have_smartengine.inc

SET @start_global_value = @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS;
SELECT @start_global_value;

--echo "Trying to set @session.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS to simple table name."
SET @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS = mytable;
SELECT @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS;

--echo "Trying to set @session.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS to regex table name(s)."
SET @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS = "t.*";
SELECT @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS;

--echo "Trying to set @session.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS to multiple regex table names."
SET @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS = "s.*,t.*";
SELECT @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS;

--echo "Trying to set @session.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS to empty."
SET @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS = "";
SELECT @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS;

--echo "Trying to set @session.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS to default."
SET @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS = DEFAULT;
SELECT @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS;

--echo "Trying to set @session.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS to 444.  It should fail because it is not session."
--Error ER_GLOBAL_VARIABLE
SET @@session.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS = 444;

SET @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS = @start_global_value;
SELECT @@global.SMARTENGINE_STRICT_COLLATION_EXCEPTIONS;
