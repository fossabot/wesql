# WL10398:  Improve SELECT COUNT(*) performance by using
# handler::records(index) in execution phase.
 
#  Mixed SE in a single statement will need to call ha_records from execute
#  phase only.

#use smartengine_parallel_read_threads=1

select @@global.smartengine_parallel_read_threads into @parallel_scan_saved;

set global smartengine_parallel_read_threads=1;
set smartengine_parallel_read_threads=1;

CREATE TABLE t_smartengine(c1 INT NOT NULL PRIMARY KEY,
                      c2 INT NOT NULL,
                      c3 char(20),
                      KEY c3_idx(c3))ENGINE=SMARTENGINE;

INSERT INTO t_smartengine VALUES (1, 1, 'a'), (2,2,'a'), (3,3,'a');
ANALYZE TABLE t_smartengine;

CREATE TABLE t_innnodb(c1 INT NOT NULL PRIMARY KEY,
                      c2 INT NOT NULL DEFAULT 1,
                      c3 char(20),
                      KEY c3_idx(c3)) ENGINE=InnoDB;

INSERT INTO t_innnodb(c1) VALUES (1), (2);
ANALYZE TABLE t_innnodb;

# ha_records is called from execution phase.
let query1= SELECT COUNT(*) FROM t_smartengine;

# Tables are optimized away because there is HA_COUNT_ROWS_INSTANT
let query2= SELECT COUNT(*) FROM t_innnodb;

# Neither table is optimized away. ha_records is called from execution phase
# for both tables.
let query3= SELECT COUNT(*) FROM t_innnodb, t_smartengine;

# Uses table scan for MIN(c2) because there is no index on c2.
let query4= SELECT MIN(c2), COUNT(*), MAX(c1) FROM t_smartengine;

# Uses c3_idx for MIN -> direct call from opt_sum_query (optimization phase).
# Uses c3_idx for COUNT(*) from end_send_count (execution phase).
let query5= SELECT MIN(c3), COUNT(*) FROM t_smartengine;

eval EXPLAIN $query1;
eval EXPLAIN $query2;
eval EXPLAIN $query3;
eval EXPLAIN $query4;
eval EXPLAIN $query5;

FLUSH STATUS;
eval $query1;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query2;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query3;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query4;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query5;
SHOW STATUS LIKE 'Handler_%';

# This WL should affect a table with no primary key only to the extent that
# call to records happens in execution phase now. 

CREATE TABLE t_nopk(c1 INT NOT NULL , c2 INT NOT NULL)ENGINE=SMARTENGINE;
INSERT INTO t_nopk SELECT c1, c2 FROM t_smartengine;
SHOW CREATE TABLE t_nopk;

let query6= SELECT COUNT(*) FROM t_nopk;
--replace_column 10 # 11 #
eval EXPLAIN $query6;

FLUSH STATUS;
eval $query6;
SHOW STATUS LIKE 'Handler_%';

# Add a secondary index and notice the difference in the plan. 
CREATE INDEX c2_idx on t_nopk(c2);
SHOW CREATE TABLE t_nopk;

--replace_column 10 # 11 #
eval EXPLAIN $query6;

FLUSH STATUS;
eval $query6;
SHOW STATUS LIKE 'Handler_%';

DROP TABLE t_nopk;

# Set of tests to check if records / records_from_index are called correctly.

CREATE TABLE t_smartengine_nopk_sk(c1 INT NOT NULL,
                              c2 INT NOT NULL, KEY c2_idx(c2))ENGINE=SMARTENGINE;
CREATE TABLE t_smartengine_pk_nosk(c1 INT NOT NULL PRIMARY KEY,
                              c2 INT NOT NULL)ENGINE=SMARTENGINE;
CREATE TABLE t_smartengine_nopk_nosk(c1 INT NOT NULL,
                                c2 INT NOT NULL)ENGINE=SMARTENGINE;
INSERT INTO t_smartengine_nopk_sk(c1,c2) VALUES (1, 1), (2,2), (3,3);
INSERT INTO t_smartengine_pk_nosk(c1,c2) SELECT * FROM t_smartengine_nopk_sk;
INSERT INTO t_smartengine_nopk_nosk(c1,c2) SELECT * FROM t_smartengine_nopk_sk;
ANALYZE TABLE t_smartengine_nopk_sk, t_smartengine_pk_nosk, t_smartengine_nopk_nosk;

#Uses handler::records_from_index. Cheaper to use secondary index.
let query7= SELECT COUNT(*) FROM t_smartengine_nopk_sk;

#Uses ha_innobase::records. Count returned with a single handler call.
let query8= SELECT COUNT(*) FROM t_smartengine_pk_nosk;

#Also uses ha_innobase::records.
let query9= SELECT COUNT(*) FROM t_smartengine_nopk_nosk;

--replace_column 10 # 11 #
eval EXPLAIN $query7;
--replace_column 10 # 11 #
eval EXPLAIN $query8;
--replace_column 10 # 11 #
eval EXPLAIN $query9;

#under the current circumstances: non-zero value in Handler_read_next means
# handler::records_from_index() is called. zero value in Handler_read_next
# means ha_innobase::records() is called.

FLUSH STATUS;
eval $query7;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query8;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query9;
SHOW STATUS LIKE 'Handler_%';

DROP TABLE t_smartengine_pk_nosk, t_smartengine_nopk_sk, t_smartengine_nopk_nosk;

#Other SEs
CREATE TABLE t_heap(c1 INT NOT NULL PRIMARY KEY,
                      c2 INT NOT NULL,
                      c3 char(20)) ENGINE=HEAP;
CREATE TABLE t_archive(c1 INT NOT NULL, c2 char(20)) ENGINE=ARCHIVE;

INSERT INTO t_heap SELECT * FROM t_smartengine WHERE c1 > 1;
INSERT INTO t_archive SELECT c1, c3 FROM t_smartengine WHERE c1 > 1;

let query10= SELECT COUNT(*) FROM t_heap;
let query11= SELECT COUNT(*) FROM t_smartengine, t_heap;
let query12= SELECT COUNT(*) FROM t_archive;
let query13= SELECT COUNT(*) FROM t_smartengine, t_archive;

eval EXPLAIN $query10;
eval EXPLAIN $query11;
eval EXPLAIN $query12;
eval EXPLAIN $query13;

FLUSH STATUS;
eval $query10;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query11;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query12;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query13;
SHOW STATUS LIKE 'Handler_%';
DROP TABLE t_archive, t_heap;

#FORCE INDEX
# ha_records is called from execution phase.
let query14= SELECT COUNT(*) FROM t_smartengine FORCE INDEX(c3_idx);

# Tables aren't optimized away here because of force index.
let query15= SELECT COUNT(*) FROM t_innnodb FORCE INDEX(c3_idx);
eval EXPLAIN $query14;
eval EXPLAIN $query15;

FLUSH STATUS;
eval $query14;
SHOW STATUS LIKE 'Handler_%';

FLUSH STATUS;
eval $query15;
SHOW STATUS LIKE 'Handler_%';

#Testcase for specific lines of code. 

# tests opt_sum_query(): tables_filled &= !(...). Without the "&" we access
# the temptable SE's temptable::Handler::records
SELECT COUNT(*) FROM (SELECT DISTINCT c1 FROM t_innnodb) dt, t_innnodb;

# Tests end_send_count: if (copy_fields(....))
SET @s =1;
SELECT @s, COUNT(*) FROM t_smartengine;

set sql_mode='';
# Test for end_send_count: if (having_is_true(join->having_cond)) 
SELECT 1 AS c1, (SELECT COUNT(*) FROM t_smartengine HAVING c1 > 0) FROM DUAL;
SELECT 1 FROM t_smartengine HAVING COUNT(*) > 1;

SELECT COUNT(*) c FROM t_smartengine HAVING c > 1;
#empty result.
SELECT COUNT(*) c FROM t_smartengine HAVING c > 7;

set sql_mode=default;

# Bug #28056133: Requires a fix in get_exact_record_count to avoid dummy temp
# tables.
SELECT SQL_BIG_RESULT COUNT(*) FROM t_smartengine;
SELECT SQL_BIG_RESULT COUNT(*) FROM t_smartengine, t_innnodb;

DROP TABLE t_smartengine, t_innnodb;

set smartengine_parallel_read_threads=@parallel_scan_saved;
set global smartengine_parallel_read_threads=@parallel_scan_saved;

