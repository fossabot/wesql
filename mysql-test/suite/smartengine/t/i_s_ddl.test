--source suite/smartengine/include/have_smartengine.inc

#
# Information Schema DDL
#

--disable_warnings
DROP TABLE IF EXISTS is_ddl_t1;
DROP TABLE IF EXISTS is_ddl_t2;
--enable_warnings

CREATE TABLE is_ddl_t1 (i INT, j INT, k INT, l INT,
                        PRIMARY KEY (i), KEY (j), KEY (k, l) COMMENT 'kl_cf')
                        ENGINE = SMARTENGINE;

CREATE TABLE is_ddl_t2 (x INT, y INT, z INT,
                        PRIMARY KEY (z, y) COMMENT 'zy_cf',
                        KEY (x)) ENGINE = SMARTENGINE;
SELECT TABLE_SCHEMA,TABLE_NAME,PARTITION_NAME,INDEX_NAME,INDEX_TYPE,KV_FORMAT_VERSION FROM INFORMATION_SCHEMA.SMARTENGINE_DDL WHERE TABLE_NAME like 'is_ddl_t%' ORDER BY TABLE_NAME,INDEX_TYPE, INDEX_NAME;

# cleanup
DROP TABLE is_ddl_t1;
DROP TABLE is_ddl_t2;
