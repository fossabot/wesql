source suite/smartengine/include/have_smartengine.inc;
create table t1 (a int primary key) ENGINE = SMARTENGINE;

-- echo Verify smartengine_rows_inserted
select variable_value into @old_rows_inserted from performance_schema.global_status where variable_name = 'smartengine_rows_inserted';
insert into t1 values(1);
select variable_value into @new_rows_inserted from performance_schema.global_status where variable_name = 'smartengine_rows_inserted';
select @new_rows_inserted - @old_rows_inserted;

-- echo Verify smartengine_rows_updated
select variable_value into @old_rows_updated from performance_schema.global_status where variable_name = 'smartengine_rows_updated';
update t1 set a=2 where a=1;
select variable_value into @new_rows_updated from performance_schema.global_status where variable_name = 'smartengine_rows_updated';
select @new_rows_updated - @old_rows_updated;

-- echo Verify smartengine_rows_read
select variable_value into @old_rows_read from performance_schema.global_status where variable_name = 'smartengine_rows_read';
select * from t1;
select variable_value into @new_rows_read from performance_schema.global_status where variable_name = 'smartengine_rows_read';
select @new_rows_read - @old_rows_read;

-- echo Verify smartengine_rows_deleted
select variable_value into @old_rows_deleted from performance_schema.global_status where variable_name = 'smartengine_rows_deleted';
delete from t1;
select variable_value into @new_rows_deleted from performance_schema.global_status where variable_name = 'smartengine_rows_deleted';
select @new_rows_deleted - @old_rows_deleted;

