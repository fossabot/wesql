--source include/have_debug.inc
--source suite/smartengine/include/have_smartengine.inc

connect (con1,localhost,root,,);
connect (con2,localhost,root,,);
connection con1;
#prepare data
create table t(id int primary key);
--disable_query_log
let $i = 1;
while ($i <= 1024) {
  eval insert into t values($i);
  inc $i;
}
--enable_query_log
set @@GLOBAL.DEBUG= '+d, before_sleep_in_flush_collect_stats';
set @@GLOBAL.DEBUG= '+d, after_sleep_in_flush_collect_stats';
--echo #sending
--send set global smartengine_flush_memtable=ON;

connection con2;
sleep 10;
set @@GLOBAL.DEBUG= '+d, sleep_before_rename_write_storage_engine';
alter table t add column c1 int;
set @@GLOBAL.DEBUG= '-d, sleep_before_rename_write_storage_engine';

connection con1;
--reap;
set @@GLOBAL.DEBUG= '-d, before_sleep_in_flush_collect_stats';
set @@GLOBAL.DEBUG= '-d, after_sleep_in_flush_collect_stats';
drop table t;
--source suite/smartengine/include/check_smartengine_log_error.inc
