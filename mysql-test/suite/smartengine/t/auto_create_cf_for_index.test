--source suite/smartengine/include/have_smartengine.inc

--disable_warnings
DROP TABLE IF EXISTS t1;
DROP TABLE IF EXISTS t2;
DROP TABLE IF EXISTS t3;
--enable_warnings


#implicitly create cf
create table t1 (id int, c1 int,  primary key (id), index idx_c2(c1)) ENGINE = SMARTENGINE;
create table t2 (id int, c2 int,  primary key (id)) ENGINE = SMARTENGINE;
create table t3 (id int, c3 int,  primary key (id) comment 't3_primary') ENGINE = SMARTENGINE;
--replace_column 2 #
SELECT INDEX_NAME,SUBTABLE_ID FROM INFORMATION_SCHEMA.SMARTENGINE_DDL WHERE TABLE_NAME='t1';
--replace_column 2 #
SELECT INDEX_NAME,SUBTABLE_ID FROM INFORMATION_SCHEMA.SMARTENGINE_DDL WHERE TABLE_NAME='t2';
--replace_column 2 #
SELECT INDEX_NAME,SUBTABLE_ID FROM INFORMATION_SCHEMA.SMARTENGINE_DDL WHERE TABLE_NAME='t3';

#alter
alter table t2 add index idx_c2(c2);
alter table t3 add index idx_c3(c3) comment 'cf_t3';
--replace_column 2 #
SELECT INDEX_NAME,SUBTABLE_ID FROM INFORMATION_SCHEMA.SMARTENGINE_DDL WHERE TABLE_NAME='t2';
--replace_column 2 #
SELECT INDEX_NAME,SUBTABLE_ID FROM INFORMATION_SCHEMA.SMARTENGINE_DDL WHERE TABLE_NAME='t3';

--disable_query_log
let $i = 1;
while ($i <= 100) {
  let $insert1 = INSERT INTO t1 VALUES($i, $i);
  let $insert2 = INSERT INTO t2 VALUES($i, $i);
  let $insert3 = INSERT INTO t3 VALUES($i, $i);
  inc $i;
  eval $insert1;
  eval $insert2;
  eval $insert3;
}
--enable_query_log
select count(*) from t1;
select count(*) from t2;
select count(*) from t3;

